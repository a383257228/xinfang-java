package com.sinosoft.xf.query.common;


/**
 * 根据指定日期，返回业务时间（String）
 * @author hjh
 *
 * 2015-1-31下午02:58:21
 */
public class BusinessTimeStr extends DateSetters {
	
	private String datePattern = "yyyy-MM-dd";

	public BusinessTimeStr(String dateStr) {
		super(dateStr);
	}
	public BusinessTimeStr() {
		super();
	}

	public String getMonthStartTime(){
		return monthStart.toString(datePattern);
	}
	public String getMonthEndTime(){
		return monthEnd.toString(datePattern);
	}
	public String getLastMonthStartTime(){
		return lastMonthStart.toString(datePattern);
	}
	public String getLastMonthEndTime(){
		return lastMonthEnd.toString(datePattern);
	}
	public String getYearEndTime(){
		return yearEnd.toString(datePattern);
	}
	public String getYearStartTime(){
		return yearStart.toString(datePattern);
	}
	public String getLastYearEndTime(){
		return lastYearEnd.toString(datePattern);
	}
	public String getLastYearStartTime(){
		return lastYearStart.toString(datePattern);
	}
	public String getLastYearMonthEndTime(){
		return lastYearMonthEnd.toString(datePattern);
	}
	public String getLastYearMonthStartTime(){
		return lastYearMonthStart.toString(datePattern);
	}

}
